generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  name          String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  emailVerified Boolean     @default(false)
  image         String?
  accounts      Account[]
  alerts        Alert[]
  sessions      Session[]
  watchlists    Watchlist[]
  portfolio     Portfolio?

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verifications")
}

model Watchlist {
  id        String          @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  items     WatchlistItem[]
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("watchlists")
}

model WatchlistItem {
  id          String    @id @default(cuid())
  symbol      String
  watchlistId String
  createdAt   DateTime  @default(now())
  watchlist   Watchlist @relation(fields: [watchlistId], references: [id], onDelete: Cascade)

  @@unique([watchlistId, symbol])
  @@map("watchlist_items")
}

model Alert {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  type      String
  value     Float
  active    Boolean  @default(true)
  notified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("alerts")
}

model Portfolio {
  id            String            @id @default(cuid())
  userId        String            @unique
  walletBalance Float             @default(0)
  currency      String            @default("USD") // User's wallet currency
  dripEnabled   Boolean           @default(false) // DRIP (Dividend Reinvestment Plan)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  positions     Position[]
  trades        Trade[]
  walletTransactions WalletTransaction[]
  dividendPayouts DividendPayout[]

  @@map("portfolios")
}

model Position {
  id          String    @id @default(cuid())
  portfolioId String
  symbol      String
  totalShares Float
  avgPrice    Float
  totalCost   Float     @default(0)
  realizedPnl Float     @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@unique([portfolioId, symbol])
  @@map("positions")
}

model Trade {
  id         String    @id @default(cuid())
  portfolioId String
  symbol     String
  action     String
  price      Float
  quantity   Float
  timestamp  DateTime
  note       String?
  createdAt  DateTime  @default(now())
  portfolio  Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("trades")
}

model WalletTransaction {
  id         String    @id @default(cuid())
  portfolioId String
  action     String
  amount     Float
  timestamp  DateTime
  method     String?
  createdAt  DateTime  @default(now())
  portfolio  Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  // Dividend fields
  securityId String?
  meta       Json?    // Store dividend payout details, FX rates, etc.
  
  @@map("wallet_transactions")
}

model Security {
  id                    String            @id @default(cuid())
  symbol                String            @unique
  name                  String?
  exchange              String            // NYSE, NASDAQ, TSX
  currency              String            @default("USD") // USD, CAD
  dividendFreq          String?           // QUARTERLY, MONTHLY, ANNUAL
  ttmDividendPerShare   Float?
  lastExDate            DateTime?
  nextExDate            DateTime?
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  corporateActions      CorporateAction[]
  dividendPayouts       DividendPayout[]

  @@map("securities")
}

model CorporateAction {
  id            String      @id @default(cuid())
  securityId    String
  type          String      // CASH_DIVIDEND, STOCK_SPLIT, etc.
  exDate        DateTime
  recordDate    DateTime
  payDate       DateTime?
  amountPerShare Float
  currency      String      @default("USD")
  status        String      @default("PENDING") // PENDING, PAID, CANCELED
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  security      Security    @relation(fields: [securityId], references: [id], onDelete: Cascade)
  dividendPayouts DividendPayout[]

  @@map("corporate_actions")
}

model DividendPayout {
  id            String            @id @default(cuid())
  portfolioId   String
  securityId    String
  corporateActionId String
  qtyOnRecord   Float
  grossAmount   Float
  withholdTax   Float             @default(0)
  netAmount     Float
  currency      String
  fxRate        Float?            // For currency conversion
  status        String            @default("PENDING") // PENDING, CREDITED, FAILED
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  portfolio     Portfolio         @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  security      Security          @relation(fields: [securityId], references: [id], onDelete: Cascade)
  corporateAction CorporateAction @relation(fields: [corporateActionId], references: [id], onDelete: Cascade)

  @@map("dividend_payouts")
}

model FXRate {
  id          String   @id @default(cuid())
  fromCurrency String
  toCurrency   String
  rate         Float
  date         DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([fromCurrency, toCurrency, date])
  @@map("fx_rates")
}

model PortfolioSnapshot {
  id            String   @id @default(cuid())
  userId        String
  timestamp     DateTime  @default(now())
  tpv           Float     // Total Portfolio Value
  walletBalance Float     @default(0)
  costBasis     Float     @default(0)
  totalReturn   Float     @default(0)
  totalReturnPct Float    @default(0)
  holdingsCount Int       @default(0)
  details       Json?     // Store holdings breakdown, etc.

  @@index([userId, timestamp])
  @@map("portfolio_snapshots")
}
